html
    background-color rgb(0, 0, 65)
    color white

.options
    background-color rgba(0, 0, 0, 0.411)
    border-radius 7px
    position relative
    width 80%
    margin 0 auto
    display flex
    flex-direction column
    justify-content center
    align-items center

    h1 
        width fit-content
        margin 6px auto
    
    h2,h3,input 
        margin 4px auto

    highlight-effect()
        background-color rgb(0, 75, 0)
        border 3px solid deepskyblue

    input
        padding 6px
        display block
        border 3px solid deeppink
        background-color transparent
        border-radius 6px
        height 20px
        width 200px
        color white
        &:focus
            highlight-effect()

    button 
        position relative
        border 3px solid deeppink
        background-color transparent
        border-radius 6px
        height 30px
        width fit-content
        color white
        &:hover
            highlight-effect()
            cursor pointer
    
    input, button 
        transition all, 0.3s

    .ok
        color rgb(0, 255, 0)
        font-size 20px
    
    .err
        color red
        font-size 20px